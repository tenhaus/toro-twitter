package twitter.api.data{	import com.adobe.utils.DateUtil;		public class TwitterStatus 	{		//public var createdAt:Date;		public var createdAt:String;		public var id:Number;		public var text:String;		public var user:TwitterUser;		public var source : String;				// these are for the itemRenderer		public var showingOptions : Boolean;				function TwitterStatus( status : Object = null, twitterUser : TwitterUser = null ) 		{						if( status == null ) return;						//this.createdAt = makeDate( status.created_at );			this.createdAt = status.created_at;			id = status.id;			source = status.source;						//text = ToroUtil.htmlFormatComment( status, twitterUser );			text = status.text;						if (twitterUser)			{				user = twitterUser;			} 			else 			{				user = new TwitterUser(status.user);			}						status = null;								}				private function makeDate( created_at:String ):Date		{						var dateString:String = created_at.substr(0,10) + " " + created_at.substr( created_at.length -4,created_at.length );			var timeString:String = created_at.substr(11,8);						var d : Date = new Date(dateString + " " + timeString);						var offset : Number = d.getTimezoneOffset() * 60 * 1000;			d.setTime( d.getTime() - offset );						return( d );		}	}}